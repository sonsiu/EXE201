@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
	<div class="container h-100">
		<div class="blog-banner">
			<div class="text-center">
				<h1>ART OF LIGHT</h1>
				<nav aria-label="breadcrumb" class="banner-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active" aria-current="page">Decorative 3D LED Paintings</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- ================ end banner area ================= -->

<section class="section-margin calc-60px">
    <div class="container">

        <div class="section-intro pb-60px">
            <h2>About Us</h2>
            <span style="margin-left:40px">We are creators of innovative 3D LED paintings—where art meets technology. Our mission is to redefine visual experiences through dynamic, light-infused designs that create a sense of depth and motion. Every piece is crafted with precision, passion, and a commitment to quality, making it more than just decor—it’s a conversation starter and a visual journey.</span>
        </div>

        <div class="section-intro pb-60px">
            @* <p>New Items in the market</p> *@
            <h2>Our <span class="section-intro__style">Newest Product</span></h2>
        </div>
        <div class="row">
            @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-center card-product">
                    <div class="card-product__img">
                            <a asp-controller="Shop" asp-action="Detail" asp-route-id="@product.Id">
                            <img class="card-img" src="@product.ImageUrl" alt="@product.Name" style="height:260px">
                            </a>
                        <ul class="card-product__imgOverlay">
                            <li><button><i class="ti-search"></i></button></li>
                                @if (product.Quantity > 0)
                                {
                                    <li>
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id"><button><i class="ti-shopping-cart"></i></button></a>

                                    </li>
                                }
                            <li><button><i class="ti-heart"></i></button></li>
                        </ul>
                    </div>
                    <div class="card-body">
                            <p>@product.Category.Name</p>
                            <h4 class="card-product__title"><a asp-controller="Shop" asp-action="Detail" asp-route-id="@product.Id">@product.Name</a></h4>
                            <p class="card-product__price">$@product.Price</p>
                    </div>
                </div>
            </div>
           }
        </div>

        <hr style="background-color:black"/>

    </div>
</section>

<footer style="background-color: white; color: #000; padding: 40px 0;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 20px; display: flex; flex-wrap: wrap; justify-content: space-between;">

        <!-- Brand Info -->
        <div style="flex: 1 1 250px; margin-bottom: 20px;">
            <h3 style="margin-bottom: 10px;">Art of Light</h3>
            <p>Innovative 3D LED paintings that transform any space into a stunning visual experience.</p>
        </div>

        <!-- Quick Links -->
        <div style="flex: 1 1 150px; margin-bottom: 20px;">
            <h4>Quick Links</h4>
            <ul style="list-style: none; padding: 0;">
                <li><a href="#" style="color: #ccc; text-decoration: none;">Home</a></li>
                <li><a href="#" style="color: #ccc; text-decoration: none;">Gallery</a></li>
                <li><a href="#" style="color: #ccc; text-decoration: none;">About</a></li>
                <li><a href="#" style="color: #ccc; text-decoration: none;">Contact</a></li>
            </ul>
        </div>

        <!-- Contact Info -->
        <div style="flex: 1 1 200px; margin-bottom: 20px;">
            <h4>Contact</h4>
            <p>Email: support@artoflight.com</p>
            <p>Phone: +1 (123) 456-7890</p>
        </div>

        <!-- Social Media -->
        <div style="flex: 1 1 200px; margin-bottom: 20px;">
            <h4>Follow Us</h4>
            <a href="#" style="margin-right: 10px; color: #ccc; text-decoration: none;">Facebook</a>
            <a href="#" style="margin-right: 10px; color: #ccc; text-decoration: none;">Instagram</a>
            <a href="#" style="color: #ccc; text-decoration: none;">Twitter</a>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div style="text-align: center; margin-top: 30px; color: #666; font-size: 14px;">
        © 2025 Art of Light. All rights reserved.
    </div>
</footer>



