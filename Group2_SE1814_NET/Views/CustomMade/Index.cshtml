@{
    ViewData["Title"] = "Custom Made Product";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .row-uniform-img {
        width: 100%;
        height: 400px; /* or any height you prefer */
        object-fit: cover; /* Keeps aspect ratio while filling box */
        border-radius: 3px; /* Optional: for rounded corners */
    }
    .column-uniform-img {
        width: 100%;
        height: 100%; /* or any height you prefer */
        object-fit: cover; /* Keeps aspect ratio while filling box */
        border-radius: 3px; /* Optional: for rounded corners */
    }

    .zoomable-img {
        cursor: zoom-in;
    }
</style>
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Custom Made Product</h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Custom Made Product</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<section class="section-margin calc-60px">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-4 col-md-3" style="display: flex; flex-wrap: nowrap; align-items: center; text-align: left; gap: 20px; overflow-x: auto;">
                <div class="card card-product">
                    <h4>Our team specializes in the following artistic styles:</h4>
                    <h2>- Cartoon</h2>
                    <h2>- Portrait</h2>
                    <h2>- Background Illustration</h2>
                    <h4>In addition to these, we are more than happy to accommodate any custom style or specific artistic request you may have.</h4>
                    <h4>We invite you to explore a sample of our work below:</h4>
                </div>
            </div>
            <div class="col-xl-7 col-lg-8 col-md-9">
                <div class="card card-product">
                    <h4>Please contact us through: </h4>
                    <a href="https://www.facebook.com/baoduong.0512" target="_blank" class="btn btn-primary" style="width:250px">
                        <i class="fab fa-facebook me-2"></i><span>  </span>Visit our Facebook Profile
                    </a>
                    <script>
                        document.addEventListener("DOMContentLoaded", function() {
                            if (typeof FB !== 'undefined') {
                                FB.XFBML.parse();
                            }
                        });
                    </script>
                </div>
            </div>
                <div class="row">
                    <!-- First image on first row -->
                    <div class="col-12 mb-4">
                        <img src="~/img/sample/ghibli_1.jpg" 
                             class="img-fluid zoomable-img row-uniform-img" 
                             data-bs-toggle="modal"
                             data-bs-target="#imageModal" 
                             alt="Ghiblibli">
                    </div>

                    <!-- Second image on second row -->
                    <div class="col-12 mb-4">
                    <img src="~/img/sample/ghibli_2.jpg" 
                         class="img-fluid zoomable-img row-uniform-img"
                         data-bs-toggle="modal"
                         data-bs-target="#imageModal"
                         alt="Skibidibidi">
                    </div>

                    <!-- Third and fourth images on the same row -->
                    <div class="col-md-6 mb-4">
                    <img src="~/img/sample/portrait_1.jpg" 
                         class="img-fluid zoomable-img column-uniform-img"
                         data-bs-toggle="modal"
                         data-bs-target="#imageModal"
                         alt="ban gai 1 anh Bao">
                    </div>

                    <div class="col-md-6 mb-4">
                    <img src="~/img/sample/portrait_2.jpg" 
                         class="img-fluid zoomable-img column-uniform-img"
                         data-bs-toggle="modal"
                         data-bs-target="#imageModal"
                         alt="ban gai 2 anh Bao">
                    </div>
                </div>
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0 text-center">
                <img src="" id="modalImage" class="img-fluid" style="max-height: 80vh; width: auto;">
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.querySelectorAll('.zoomable-img').forEach(img => {
            img.addEventListener('click', function () {
                document.getElementById('modalImage').src = this.src;
            });
        });
    </script>
}
