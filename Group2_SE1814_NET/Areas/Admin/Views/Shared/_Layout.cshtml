@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Group2_SE1814_NET.Extensions;
@using Group2_SE1814_NET.ViewModels
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/assests/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/admin/assests/css/adminlte.min.css">
    <style>
        .listright {
            margin-left: 273px;
        }

            .listright h2 {
                margin-bottom: 20px;
            }

        td img {
            width: 60px;
            height: 60px;
        }

        .listright p a {
            color: #ffffff;
            background-color: #fb5849;
            padding: 10px;
        }

            .listright p a:hover {
                background-color: #ff0000;
                color: #ffffff;
            }

        .listright td a:hover {
            color: #ff0000;
        }

    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        @*  <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="~/assets/images/logo3-removebg-small.png" alt="AdminLTELogo" height="60" width="60">
        </div> *@
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Auth/Logout" class="nav-link">Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                            </a>
                            <ul class="nav">

                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        @RenderBody()

        <footer class="main-footer">
            <strong>Copyright by hi</strong> All rights reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/admin/assests/js/jquery.min.js"></script>
    <script src="~/admin/assests/js/adminlte.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error(`@TempData["ErrorMessage"]`, 'Error', { timeOut: 1000 });
            });
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success(`@TempData["SuccessMessage"]`, 'Success', { timeOut: 1000 });
            });
        </script>
    }
    @RenderSection("Scripts", required: false)

</body>

</html>